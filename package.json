{
  "name": "solid-crypt-pad",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci:unit": "ng test --no-watch --no-progress --browsers=ChromiumHeadlessCI --code-coverage",
    "test:ci:e2e": "npm run start-wait && cypress run",
    "lint": "ng lint",
    "prettier": "prettier -c **.{js,ts,json,html,css,scss,md}",
    "prettier:fix": "prettier --write **.{js,ts,json,html,css,scss,md}",
    "license-checker": "license-checker --summary --onlyAllow 'Apache*;Apache-2.0;BSD-2-Clause;BSD-3-Clause;0BSD;BSD*;CC0-1.0;CC-BY-3.0;CC-BY-4.0;FreeBSD;ISC;MIT;Python-2.0;Unlicense'",
    "prepare": "husky install",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "precss": "node delete_css_storage.js",
    "css": "community-solid-server -p 3000 -c ./custom-css-config/file-no-setup.json -f ./community-solid-server",
    "start-wait": "npm run start-wait:frontend && npm run start-wait:css",
    "start-wait:frontend": "npm start & wait-on -t 300000 http://localhost:4200",
    "start-wait:css": "npm run css & wait-on -t 300000 http://localhost:3000",
    "e2e": "ng e2e"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,ts,json,html,css,scss,md}": "prettier --write"
  },
  "private": false,
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/cdk": "~13.3.2",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/material": "~13.3.2",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "@inrupt/solid-client": "1.21.0",
    "@inrupt/solid-client-authn-browser": "1.11.7",
    "@inrupt/vocab-common-rdf": "1.0.3",
    "@types/crypto-js": "^4.1.1",
    "color-hash": "^2.0.1",
    "crypto-js": "^4.1.1",
    "jszip": "^3.10.0",
    "mime": "^3.0.0",
    "ngx-editor": "^12.2.2",
    "ngx-markdown": "^13.1.0",
    "ngx-toastr": "^14.2.4",
    "rxjs": "~7.5.0",
    "solid-file-client": "^2.1.3",
    "tslib": "^2.3.0",
    "y-prosemirror": "^1.0.18",
    "y-webrtc": "^10.2.2",
    "yjs": "^13.5.34",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.0",
    "@angular-eslint/builder": "13.1.0",
    "@angular-eslint/eslint-plugin": "13.1.0",
    "@angular-eslint/eslint-plugin-template": "13.1.0",
    "@angular-eslint/schematics": "13.1.0",
    "@angular-eslint/template-parser": "13.1.0",
    "@angular/cli": "~13.3.0",
    "@angular/compiler-cli": "~13.3.0",
    "@cypress/schematic": "^1.7.0",
    "@solid/community-server": "^4.0.1",
    "@types/color-hash": "^1.0.2",
    "@types/jasmine": "~3.10.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^12.11.1",
    "@types/prosemirror-schema-basic": "^1.0.2",
    "@types/prosemirror-schema-list": "^1.0.3",
    "@types/prosemirror-state": "^1.2.8",
    "@types/prosemirror-view": "^1.23.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "cypress": "^9.5.4",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "typescript": "~4.6.2",
    "wait-on": "^6.0.1"
  }
}
